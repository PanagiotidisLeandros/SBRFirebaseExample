<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".InsertReservesFragment">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="INSERT RESERVATION"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="24dp"
        android:layout_margin="24dp"/>

    <EditText
        android:id="@+id/ReservesSidEditText1"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:ems="10"
        android:hint="insert sailor id"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/ReservesBidEditText2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:ems="10"
        android:hint="Insert boat id"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/ReservesDateEditText3"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:ems="10"
        android:hint="Insert date of reservation"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/insertReservesSubmitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp" />

</LinearLayout>